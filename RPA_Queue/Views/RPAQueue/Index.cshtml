@model IEnumerable<RPA_Queue.ViewModels.RPAQueueViewModel>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="text-info text-center">RPA Queue</h1>
            <br />
            <div class="row pb-2">
                <div class="col-1 ml-3">
                    <a class="btn btn-primary" style="border-radius:12px;" asp-action="Create"><i class="fas fa-plus"></i></a>
                </div>
            </div>

            @if (Model.Count() > 0)
            {
                <table id="QueueTable" class="table table-striped table-hover table-responsive table-bordered" width="100%">
                    <thead class="text-nowrap text-center thead-light">
                        <tr>
                            <th>Action</th>
                            <th>Project Name</th>
                            <th>Group</th>
                            <th>Department</th>
                            <th>Cost Center</th>
                            <th>Process Owner</th>
                            <th>Account</th>
                            <th>License Type</th>
                            <th>Note</th>
                            <th>Development Status</th>
                            <th>Schedule</th>
                            <th>Running Times</th>
                            <th>Used Applications</th>
                            <th>Developed On</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="w-100 btn-group" role="group">
                                        <a class="btn btn-info" asp-controller="RPAQueue" asp-action="Edit" asp-route-Id="@item.Id"><i class="fas fa-edit"></i></a>
                                        <a class="btn btn-danger ml-1" asp-controller="RPAQueue" asp-action="Delete" asp-route-Id="@item.Id"><i class="fas fa-times-circle"></i></a>
                                    </div>
                                </td>
                                <td>@item.ProjectName</td>
                                <td>@item.Group</td>
                                <td>@item.Department</td>
                                <td>@item.CostCenter</td>
                                <td>@item.ProcessOwner</td>
                                <td>@item.Account</td>
                                <td>@item.LicenseType</td>
                                <td>@item.Note</td>
                                <td>@item.DevelopmentStatus</td>
                                <td>@item.Schedule</td>
                                <td>@item.RunningTimes</td>
                                <td>@item.UsedApps</td>
                                <td>@item.DevelopedOn.ToShortDateString()</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p> No items created yet. </p>
            }
        </div>
    </div>
</div>
