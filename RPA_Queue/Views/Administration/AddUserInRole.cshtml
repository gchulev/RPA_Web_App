@using RPA_Queue.ViewModels
@model AddUserInRoleViewModel

@{
    ViewBag.Title = "Add Remove Users";
    var roleId = ViewBag.roleId;
}

<div class="container">
    <form method="post">
        <div class="card w-50">
            <div class="card-header">
                <h4>Add users to this role</h4>
            </div>
            <div class="card-body">
                <div class="row ml-0">
                    <input type="text" class="w-75" placeholder="Search username" name="searchInput" asp-for="@Model.UserName" />
                    <a class="btn btn-outline-primary ml-2" asp-action="SearchUser" asp-controller="Administration"><i class="fas fa-search"></i></a>
                </div>
                @*<label class="mt-2 font-weight-bold">Users found!</label>*@
                <hr class="mt-0" />
                <div class="form-check">
                    @if (Model != null)
                    {
                        <input class="form-check-input" type="checkbox" />
                        <label class="form-check-label">@Model.UserName</label>
                    }
                    else
                    {
                        <label>There are no users in this role.</label>
                    }
                </div>
            </div>
            <div class="card-footer">
                <button class="btn btn-primary text-white" type="submit">Save</button>
                <a class="btn alert-secondary">Close</a>
            </div>
        </div>
    </form>
</div>