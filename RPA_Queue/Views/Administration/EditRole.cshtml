@model RPA_Queue.ViewModels.EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
}

<div class="container">
    <h1>Edit Role</h1>

    <form method="post" class="mt-3">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Id" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="RoleName" class="form-control" />
            </div>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button class="btn btn-primary" type="submit">Update</button>
                <a class="btn btn-primary text-white" asp-action="ListRoles">Cancel</a>
            </div>
        </div>
    </form>

    @if (Model.Users.Any())
    {
        <div class="card-header">
            <h3>Users in this role</h3>
        </div>
        <div class="card-body">
            @foreach (var user in Model.Users)
            {
                <div class="row">
                    <div class="col">
                        <div>@user</div>
                    </div>
                </div>
            }
        </div>
        <div class="card-footer">
            <a class="btn btn-primary" type="submit" name="AddUser" asp-controller="Administration" asp-action="AddUserInRole" asp-route-roleId=@Model.Id>Add User</a>
            <a class="btn btn-primary text-white">Remove User</a>
        </div>
    }
    else
    {
        <div class="card-header">
            <h3>Users in this role</h3>
        </div>
        <div class="card-body">
            None at the moment
        </div>
        <div class="card-footer">
            <a class="btn btn-primary" type="submit" name="AddUser" asp-controller="Administration" asp-action="AddUserInRole" asp-route-roleId=@Model.Id>Add User</a>
            @*<a class="btn btn-primary text-white">Remove User</a>*@
        </div>
    }

</div>