@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "List User Roles.";
}

<div class="container-fluid">
    <div class="col-10">
        <h1> User Roles</h1>
        <p></p>

        @if (Model.Any())
        {
            <a class="btn btn-primary" style="width:auto" asp-controller="Administration" asp-action="CreateRole">Add New Role</a>
            <p></p>

            foreach (IdentityRole role in Model)
            {
                <div class="card mb-3">
                    <div class="card-header">
                        Role Id: @role.Id
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@role.Name</h5>
                    </div>
                    <div class="card-footer btn-group" role="group">
                        <div>
                            <a class="btn btn-primary text-white" asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id">Edit</a>
                        </div>
                        <form asp-action="DeleteRole" asp-route-roleId="@role.Id" method="post">
                            <button class="btn btn-danger text-white" type="submit" onclick="return confirm('Are you sure you want to delete role: @role.Name ?')">Delete</button>
                        </form>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="card">
                <div class="card-header">
                    No roles created yet!
                </div>
                <div class="card-body">
                    <h5 class="card-title">Use the button below to create a Role.</h5>
                    <a class="btn btn-primary" style="width:auto" asp-controller="Administration" asp-action="CreateRole">Create Role</a>
                </div>
            </div>
        }
        <a class="btn btn-primary" asp-controller="RPAQueue" asp-action="Index">Back</a>
    </div>
</div>
